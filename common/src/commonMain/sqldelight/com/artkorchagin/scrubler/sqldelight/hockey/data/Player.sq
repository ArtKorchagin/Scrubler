selectAll:
SELECT *
FROM hockeyPlayer;

maxPlayer:
SELECT MAX(player_number)
FROM hockeyPlayer;

insert:
INSERT INTO hockeyPlayer(player_number, full_name)
VALUES (?, ?);

insertFullPlayerObject:
INSERT INTO hockeyPlayer(player_number, full_name)
VALUES ?;

removeAllPlayers:
DELETE FROM hockeyPlayer;